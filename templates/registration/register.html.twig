{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}
 <script src="https://www.google.com/recaptcha/api.js"></script>

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="header">
        <img src="{{ absolute_url(asset('images/roof.jpg')) }}" class=""  alt="header">
        <div class="container">
            <div class="home-header">
                <h1>
                    Register      
                </h1>
            </div>
        </div>
    </div>

    <div class="content container panel panel-body">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

        <div class="action-button">
            {{ form_row(registrationForm.agreeTerms) }}         
            <button type="submit" class="btn btn-warning btn-lg g-recaptcha" data-sitekey="6Lf1_rAZAAAAADE-l8fQkyA_sNfzh_Lu41Heup5d" data-callback='onSubmit' data-action='submit'>Register</button>
        </div>
    {{ form_end(registrationForm) }}
    </div>
    

     <script>
   function onSubmit(token) {
     document.getElementById("form").submit();
   }
 </script>
{% endblock %}

