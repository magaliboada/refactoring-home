<form method="post" action="{{ path('room_delete', {'id': room.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this room?'|trans({}, 'room') }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ room.id) }}">
    <button class="btn btn-danger delete">{{ 'Delete'|trans({}, 'room') }}</button>
</form>
