
{% extends 'base.html.twig' %}

{% block title %} Home Refactor | Rooms{% endblock %}

{% block body %}
<script src="https://www.google.com/recaptcha/api.js?render=reCAPTCHA_site_key"></script>
<script src="{{ asset('js/check-form.js') }}"></script>
<div class="header">
    {# <img src="{{ absolute_url(asset('images/roof.jpg')) }}" class="responsive"  alt="header"> #}
    <div class="container">
        <div class="home-header">
            <h1>Contact us</h1>           
        </div>
    </div>
</div>

<div class="content container contact">
<section class="mb-4">

    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5 intro">Do you have any questions? Please do not hesitate to contact us directly.</p>

    <div class="row">

        <!--Grid column-->
        <div class="col-md-12 mb-md-0 mb-5">
            <form id="contact-form" name="contact-form" action="contact" method="POST">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label for="name" class="">Your name</label>
                            <input type="text" id="name" name="name" required class="form-control">                            
                        </div>
                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label for="email" class="">Your email</label>
                            <input type="text" id="email" name="email" required class="form-control">                            
                        </div>
                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <label for="subject" class="">Subject</label>
                            <input type="text" id="subject" name="subject" required class="form-control">                            
                        </div>
                    </div>
                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12">

                        <div class="md-form">
                            <label for="message">Your message</label>
                            <textarea type="text" id="message" name="message" required rows="4" class="form-control md-textarea"></textarea>                            
                        </div>

                    </div>
                </div>
                <!--Grid row-->

                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12">
                        <div class="md-form agree">
                            <label for="agree"><input required type="checkbox" id="agree" name="agree" class="form-control">  <a href="/info/privacy" target="_blank">I accept the treatment of my personal data</a>.</label>      
                                        
                        </div>
                    </div>
                </div>
                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                <div class="col-md-12">
                    <p class="message text-center">
                        {{ message | raw }}
                    </p
                </div>
            </div>

            </form>

            <div class="text-center ">
                <button type="submit" class="btn btn-warning btn-lg g-recaptcha" data-sitekey="6Lc6BbEZAAAAACiI12d4emSiFKbBZWbaPCOG_ecn" data-callback='onSubmit' data-action='submit' onclick="onSubmit()">Send</button>
            </div>
        </div>
        <!--Grid column-->



    </div>


</section>
</div>
<!--Section: Contact v.2-->




{% endblock %}