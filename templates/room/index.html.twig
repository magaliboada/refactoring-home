{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}

<div class="header">
    <img src="{{ absolute_url(asset('images/room.jpg')) }}" class="responsive"  alt="header">
    <div class="container">
        <h1 class="home-header">
            <span>Room List</span>
            <a href="{{ path('room_new') }}">Create new</a>
        </h1>
        
        
    </div>
    
</div>

<div class="content container">

    
    
</b>
    <div class="rooms row">

        {% for room in rooms %}
        <div class="col-sm-6">
            <a href="{{ path('room_show', {'id': room.id}) }}">
            <div class="room panel shadow">
                <div class="image"><img src="{{ asset(room.Image) }}" alt=""></div>
                <h2>{{ room.Name }}</h2>
                <span class="measure"><div><b>Height:</b> {{ room.Height }}</div> </span>
                <span class="measure"><div><b>Depth:</b> {{ room.Depth }}</div> </span>
                <span class="measure"><div><b>Width:</b> {{ room.Width }}</div> </span>
        
            </div>
        </a>
        </div>
        {% else %}
            <div>
                <span colspan="6">no records found</span>
            </div>
        {% endfor %}
    </div>
    

    

    

</div>
    
{% endblock %}
