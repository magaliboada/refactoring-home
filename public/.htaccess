#AuthName "Dialog prompt"
#AuthType Basic
#AuthUserFile /var/www/refactoring-home/.htpasswd
#Require valid-user
#RewriteEngine On
#RewriteCond %{SERVER_PORT} 80
#RewriteRule ^(.*)$ https://www.homerefactor.com/$1 [R,L]

RewriteEngine On
#RewriteCond %{HTTPS} !=on
#RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301,NE]
RewriteCond %{HTTP:Accept-Language} ^es-es [NC]
RewriteRule ^$ /es/ [L,R=301]
RewriteCond %{HTTP:Accept-Language} ^en-en [NC]
RewriteRule ^$ /en/ [L,R=301]

RewriteCond %{HTTPS} !=on
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301,NE]


Header always set Content-Security-Policy "upgrade-insecure-requests;"

#RewriteRule ^(en|es)/(.*)$  $2?lang=$1 [L,QSA]   
#RewriteRule ^(.*)$  $1?lang=en [L,QSA]
