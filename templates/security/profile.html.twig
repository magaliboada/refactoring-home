{% extends 'base.html.twig' %}

{% block title %} Home Refactor | Profile{% endblock %}

{% block body %}

    <div class="header">
        {# <img src="{{ absolute_url(asset('images/roof.jpg')) }}" class=""  alt="header"> #}
        <div class="container">
            <div class="home-header">
                <h1>
                    {{ 'Profile'|trans({}, 'room') }}
                </h1>
            </div>
        </div>
    </div>

    <div class="content container panel panel-body">
    

        {{ form(form) }}

        <div class="actions">
            <a href="{{ path('delete_user', {id: user.id}) }}" class="btn btn-danger" id="delete_user"  onclick="return confirm_click();">
                {{ 'Delete Account'|trans({}, 'room') }}
            </a>
        </div>
        
    </div>

    <script>
    function confirm_click()
    {
        return confirm("{{ 'If you delete your account, all your data will be lost. Are you sure you want to proceed?'|trans({}, 'room') }}");
    }
    </script>


</form>
{% endblock %}
